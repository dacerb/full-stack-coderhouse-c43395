<div class="container">
    <h1> Home List Of Products </h1>
    <div class="main">
        {{#each data}}
            <div class="card">
                <h2>{{ title }}</h2>
                <p><strong>Id</strong>: {{_id}}</p>
                <p><strong>description: </strong> {{ description }}</p>
                <p><strong>code:</strong> {{ code }}</p>
                <p class="price"><strong>price: $</strong>{{ price }}</p>
                {{#if status}}
                    <p class="status-available"><strong>status:</strong> Available</p>
                {{else}}
                    <p class="status-not-available"><strong>status:</strong> Not Available</p>
                {{/if}}
                <p class="stock"><strong>stock:</strong> {{ stock }}</p>
                <div>
                    <p><strong>thumbnail:</strong></p>
                    <ul>
                        {{#each thumbnail}}
                            <li class="links"><a href="{{ this }}">{{ this }}</a></li>
                        {{/each}}
                    </ul>
                </div>
                <button class="add-to-cart" data-product="{{_id}}" data-cart="{{_id}}">Agregar al Carrito</button>
            </div>
        {{/each}}
    </div>
</div>

<div class="box-paginate">

    <div class="box-paginate-controls">
        {{#if hasPrevPage}}
            <a href={{this.prevLink}}> <span> <<  </span> </a>
        {{/if}}
        {{!-- numero de pagina --}}
        <div class="box-paginate-current-page"><strong> pagina: {{this.page}} </strong></div>

        {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                <span> >></span> </a>
        {{/if}}
    </div>

</div>